<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f83d8fb7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/product_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:elevation="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="PRODUCTS"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orders_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title1"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="ORDERS"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/order"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title2"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="CUSTOMERS"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/customer"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title3"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="CONFIGURATION"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/configuration"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:elevation="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/news_title4"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="REPORTS"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="184dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/report"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/news_title4"
                    android:layout_toEndOf="@+id/news_title4"
                    android:layout_marginStart="184dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>