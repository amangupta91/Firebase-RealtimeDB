<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/ButtonText"
                android:endColor="@color/iconBackground"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/ButtonText"
                android:startColor="@color/iconBackground"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/iconBackground" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/ButtonText"
                android:startColor="@color/iconBackground"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/action_bar_color" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>

